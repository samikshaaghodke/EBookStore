@model GenreViewModel

<h2>Edit Genre</h2>

<form asp-action="EditGenre" method="post">
    <div class="mb-3">
        <label for="genreName" class="form-label">Genre Name</label>
        <input type="text" id="genreName" name="GenreName" class="form-control" value="@Model.GenreName" required />        
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <a asp-action="ManageGenres" class="btn btn-secondary">Back to List</a>
    </div>
</form>
